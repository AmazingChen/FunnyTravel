<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <edu.sqchen.iubao.widget.ScrollListView
            android:id="@+id/strategy_list_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:divider="@color/lines_bg"
            android:dividerHeight="0.4dp"
            />

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/lin_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚无攻略"
            android:textColor="#898F9C"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里可以查看该景点所有攻略"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#B5BAC1"
            android:textSize="12sp"
            />

    </LinearLayout>

</RelativeLayout>
