<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hotel_img"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/hotel"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="安徽水利锦江大酒店"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_black"
                />

            <TextView
                android:id="@+id/hotel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五星级"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/hotel_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="蚌埠东海大道5183号"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意度："
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/hotel_satisfaction"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/hotel_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73%"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>