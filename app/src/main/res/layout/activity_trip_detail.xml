<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="edu.sqchen.iubao.ui.fragment.HotelIntroFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_trip_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        >
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="目的地："
                    android:textColor="@color/text_grey"
                    />

                <TextView
                    android:id="@+id/trip_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_light"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="福建师范大学"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.1dp"-->
                <!--android:background="@color/lines_bg"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="出发时间："
                    android:textColor="@color/text_grey"
                    />
                <TextView
                    android:id="@+id/trip_begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_light"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="2017-5-26"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.1dp"-->
                <!--android:background="@color/lines_bg"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:textColor="@color/text_grey"
                    />
                <TextView
                    android:id="@+id/trip_over_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_light"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="2017-6-25"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.1dp"-->
                <!--android:background="@color/lines_bg"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="提醒时间："
                    android:textColor="@color/text_grey"
                    />
                <TextView
                    android:id="@+id/trip_notice_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_light"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="2017-5-22"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.1dp"-->
                <!--android:background="@color/lines_bg"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="备注信息："
                    android:textColor="@color/text_grey"
                    />
                <TextView
                    android:id="@+id/trip_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_light"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"
                    android:text="无"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
